<div class="pin-header">

  <% if user_signed_in? %>
    <%= link_to 'Click to Add a New Photo', new_pin_path, class: "btn btn-success btn-lg" %>
  <% end %>

</div>

<div class="panel panel-default">

  <div class="panel-heading"><h1>Listing Photos</h1></div>

  <div class="panel-body">

    <p id="notice"><%= notice %></p>

    <table>
      <thead>
        <tr>
          <th>Photo</th>
          <th>Description</th>
          <th>Created By</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url(:medium) %></td>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= link_to 'Show', pin , class: "btn btn-primary btn-sm" %></td>
            <% if pin.user == current_user %>
            <td><%= link_to 'Edit', edit_pin_path(pin) , class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Delete', pin, class: "btn btn-primary btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    

</div>

</div>
